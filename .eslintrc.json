{
  "extends": [
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/react",
    "airbnb"
  ],
  "plugins": ["prettier", "flowtype"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-did-mount-set-state": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "src/setupTests.js",
          "src/testEnv/*",
          "**/*.test.js",
          "**/*.spec.js"
        ]
      }
    ]
  }
}
